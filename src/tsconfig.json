{
  "compilerOptions": {
    "module": "ES2022",
    "target": "es2022",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": false,
    "jsx": "preserve",
    "incremental": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "isolatedModules": false,
    "ignoreDeprecations": "5.0",
    "noStrictGenericChecks": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors":true,
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*",
    "next-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "files": [
    "core.ts"
  ]
}