{
  "compilerOptions": {
    "module": "ES2022",
    
    "target": "es2022",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks":false,
    "ignoreDeprecations": "5.0",
    "suppressImplicitAnyIndexErrors": true,
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "files": [
    "core.ts"
  ]
}